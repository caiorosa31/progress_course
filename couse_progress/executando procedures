DEF VAR hprog AS HANDLE NO-UNDO.
DEF VAR ix AS INT NO-UNDO.

RUN persistente.p PERSISTENT SET hprog.

RUN pi-calcula IN hprog.
DO ix = 1 TO 10:
    RUN pi-resposta IN hprog.
END.


DELETE PROCEDURE hprog.

                            
